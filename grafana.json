{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-1",
    "source_ami": "ami-4b6f650e",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "Grafana {{timestamp}}"
  }],
  "provisioners": [{
    "type": "chef-solo",
    "install_command": "curl -L https://www.opscode.com/chef/install.sh | {{if .Sudo}}sudo{{end}} bash /dev/stdin -v 11",
    "cookbook_paths": ["cookbooks"],
    "run_list": [
      "recipe[grafana::default]",
      "recipe[consul::default]",
      "recipe[consul::ui]",
      "recipe[dnsmasq::dns]",
      "recipe[resolver::default]"
    ],
    "json": {
      "grafana": {
        "webserver_listen": "*",
        "datasources": {
          "metrics": {
            "type": "'influxdb'",
            "url": "window.location.protocol+'//'+window.location.hostname+':8086/db/metrics'",
            "username": "'grafana'",
            "password": "'grafpass'",
            "default": true
          },
          "grafana": {
            "type": "'influxdb'",
            "url": "window.location.protocol+'//'+window.location.hostname+':8086/db/grafana'",
            "username": "'grafana'",
            "password": "'grafpass'",
            "grafanaDB": true
          }
        }
      },
      "consul": {
        "service_mode": "client",
        "retry_on_join": true,
        "node_name": "grafana",
        "servers": ["10.0.1.100", "10.0.1.101", "10.0.1.102"],
        "serve_ui": true
      },
      "dnsmasq": {
        "dns": {
          "server": "/consul/127.0.0.1#8600"
        }
      },
      "resolver": {
        "search": "us-west-1.compute.internal",
        "nameservers": ["127.0.0.1", "10.0.0.2"]
      }
    }
  }, {
    "type": "file",
    "source": "nginx/",
    "destination": "/tmp"
  }, {
    "type": "shell",
    "inline": [
      "sudo cp /tmp/influxdb /etc/nginx/sites-enabled"
    ]
  }, {
    "type": "shell",
    "inline": [
      "sudo sh -c 'echo conf-dir=/etc/dnsmasq.d >> /etc/dnsmasq.conf'",
      "sudo chattr +i /etc/resolv.conf"
    ]
  }]
}
